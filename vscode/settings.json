{
    "workbench.activityBar.visible": false,
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": true,
    "workbench.startupEditor": "newUntitledFile",
    "explorer.confirmDragAndDrop": false,
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": false,
    "editor.formatOnSave": true,
    "explorer.sortOrder": "type",
    "breadcrumbs.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.cursorStyle": "underline",
    "files.insertFinalNewline": true,
    "keyboard.dispatch": "keyCode",
    "explorer.autoReveal": false,
    "editor.renderControlCharacters": false,
    "python.formatting.autopep8Args": [
        "--max-line-length=200"
    ],
    "editor.fontFamily": "'Source Code Pro', 'monospace'",
    "terminal.integrated.fontFamily": "'monospace'",
    "scm.diffDecorations": "none",
    "editor.fontSize": 13,
    "editor.glyphMargin": false,
    "workbench.statusBar.visible": true,
    "git.decorations.enabled": false,
    "workbench.tips.enabled": false,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-h>": false,
        "<C-w>": false,
        "<C-s>": false,
        "<C-x>": false,
        "<C-c>": false,
        "<C-v>": false,
    },
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, AlignConsecutiveDeclarations: true, ColumnLimit: 200, IndentWidth: 4, AllowShortCaseLabelsOnASingleLine: true, AlignConsecutiveAssignments: false, AlignConsecutiveDeclarations: false, AllowShortFunctionsOnASingleLine: false }",
    "explorer.compactFolders": false,
    "terminal.integrated.shell.linux": "/bin/zsh",
    "workbench.colorTheme": "Solarized Light"
}
